$(document).ready(function () {
    $('.owl-carousel').owlCarousel({
        loop:true,
        margin:10,
        nav:true,
        dots:false,
        autoplay: true,
        autoplayHoverPause: true,
        autoplayTimeout:5000,
        animateOut: 'fadeOutDown',
        animateIn: 'fadeInDown',
        responsive:{
            0:{
                items:1
            },
            600:{
                items:1
            },
            1000:{
                items:1
            }
        }
    })
});


